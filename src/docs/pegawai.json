          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Bearer token untuk autentikasi"
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Data untuk membuat pegawai baru",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "nama_pegawai",
                  "nip",
                  "kode_opd",
                  "nama_role",
                  "status_pegawai",
                  "password_hash"
                ],
                "properties": {
                  "nama_pegawai": {
                    "type": "string"
