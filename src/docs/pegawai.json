          "201": {
            "description": "Sukses membuat pegawai",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Data pegawai berhasil dibuat"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "nama_pegawai": {
                          "type": "string"
                        },
                        "nip": {
                          "type": "string"
                        },
                        "kode_opd": {
                          "type": "string"
                        },
                        "nama_role": {
                          "type": "string"
                        },
                        "status_pegawai": {
                          "type": "string"
                        },
                        "password_hash": {
                          "type": "string"
