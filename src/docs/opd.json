{
  "openapi": "3.0.3",
  "info": {
    "title": "OPD API",
    "description": "API untuk opd",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "paths": {
    "/opd": {
      "post": {
        "summary": "Buat OPD",
        "description": "Endpoint untuk membuat opd",
        "tags": [
          "OPD"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Bearer token untuk autentikasi"
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Data untuk membuat opd baru",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "kode_opd",
                  "nama_opd"
                ],
                "properties": {
                  "kode_opd": {
                    "type": "string"
                  },
                  "nama_opd": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sukses membuat opd",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Data opd berhasil dibuat"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "kode_opd": {
                          "type": "string"
                        },
                        "nama_opd": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
