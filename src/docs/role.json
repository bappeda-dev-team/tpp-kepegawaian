                      "data": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer"
                            },
                            "nama_role": {
                                "type": "string"
                            },
                            "nip": {
                                "type": "string"
                            },
                            "level_role": {
                                "type": "string"
                            }
